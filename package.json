{
  "name": "evo-monorepo",
  "private": true,
  "evo": {
    "workspaces": [
      "packages/*"
    ],
    "excludes": [
      "**/node_modules",
      "*.md",
      "package.json"
    ],
    "overrides": {
      "packages/cli": {
        "excludes": ["vendor"],
        "rules": {
          "build": {
            "cmd": "go build main.go",
            "outputs": [
              "main"
            ]
          },
          "test": {
            "cmd": "go test ./lib -v",
            "outputs": []
          },
          "release": {
            "cmd": "goreleaser release",
            "outputs": ["dist"]
          }
        }
      }
    }
  },
  "dependencies": {
    "mkdirp": "^1.0.4"
  },
  "scripts": {
    "setup": "cd packages/cli && go build main.go && cd ../.. && ln -sf ../../packages/cli/main ./node_modules/.bin/evo"
  }
}
