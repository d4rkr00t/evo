{
  "workspaces": [
    "packages/dummy/*",
    "packages/opaline/*",
    "packages/ts/*"
  ],
  "excludes": [
    "**/node_modules",
    "*.md",
    "package.json"
  ],
  "commands": {
    "@typescript": "tsc -p tsconfig.json"
  },
  "rules": {
    "build": {
      "cmd": "@typescript",
      "outputs": [
        "dist"
      ],
      "deps": [
        "@build",
        "test"
      ]
    },
    "test": {
      "cmd": "echo 'TEST'",
      "deps": [
        "@build"
      ]
    },
    "empty": {
    }
  },
  "overrides": {
    "packages/opaline/core": {
      "rules": {
        "test": {
          "cmd": "ava --config ./ava.config.cjs",
          "deps": [
            "@build"
          ]
        }
      }
    },
    "packages/ts/pkg-b-ts": {
      "rules": {
        "build": {
          "cmd": "@typescript",
          "outputs": [
            "dist"
          ],
          "deps": [
            "@build",
            "lint"
          ]
        },
        "lint": {
          "cmd": "echo 'LINT'",
          "deps": [
            "@test"
          ]
        }
      }
    },
    "packages/ts/pkg-c-ts": {
      "rules": {
        "build": {
          "cmd": "@typescript",
          "outputs": [
            "dist"
          ],
          "deps": [
            "@build",
            "pkgbints"
          ]
        },
        "pkgbints": {
          "cmd": "pkg-bin-ts",
          "deps": [
            "@build"
          ]
        }
      }
    },
    "packages/dummy": {
      "rules": {
        "build": {
          "cmd": "echo $ROOT",
          "deps": [
            "@build"
          ]
        }
      }
    }
  }
}
