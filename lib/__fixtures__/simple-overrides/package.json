{
  "name": "simple-evo-project",
  "private": true,
  "evo": {
    "workspaces": [
      "packages/*"
    ],
    "commands": {
      "@copy": "cp index.js dist.js"
    },
    "excludes": [
      "node_modules",
      "package.json"
    ],
    "rules": {
      "build": {
        "cmd": "@copy",
        "outputs": [
          "dist.js"
        ],
        "deps": [
          "@build"
        ]
      }
    },
    "overrides": {
      "packages/pkg-b": {
        "rules": {
          "build": {
            "cmd": "cp index.js bundle.js",
            "outputs": [
              "bundle.js"
            ],
            "deps": [
              "@build"
            ]
          }
        }
      }
    }
  }
}
